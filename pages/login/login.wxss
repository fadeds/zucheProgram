.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 32rpx;
}

.modal-title {
    padding-top: 40rpx;
    font-size: 34rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 30rpx 32rpx;
    display: flex;
    font-size: 30rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    width: 52%;
    color: #ec5300;
    text-align: center;
    border-color: #f9f9f9;
}

.btn-confirm::after {
    border: none;
}
